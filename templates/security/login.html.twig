{% extends 'template/security/_login.html.twig' %}

{% block body %}
    <form class="form" method="post" name="login" action="">
        <div class="card card-login card-hidden">
            <div class="card-header card-header-warning text-center">
                <h4 class="card-title">Login</h4>
                <div class="social-line">
                    <a href="#pablo" class="btn btn-just-icon btn-link btn-white">
                        <i class="fa fa-facebook-square"></i>
                    </a>
                    <a href="#pablo" class="btn btn-just-icon btn-link btn-white">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a href="#pablo" class="btn btn-just-icon btn-link btn-white">
                        <i class="fa fa-google-plus"></i>
                    </a>
                </div>
            </div>
            <div class="card-body ">
                <p class="card-description text-center">My Platform</p>
                <span class="bmd-form-group">
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text">
                          <i class="material-icons">email</i>
                        </span>
                      </div>
                      <input type="email" value="{{ last_username }}" name="email" id="inputEmail"  class="form-control" placeholder="Email...">
                    </div>
                  </span>
                <span class="bmd-form-group">
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text">
                          <i class="material-icons">lock_outline</i>
                        </span>
                      </div>
                      <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password...">
                    </div>
                </span>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <span class="bmd-form-group justify-content-center">
                    <div class="input-group justify-content-center">
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    </div>
                </span>
            </div>
            <div class="card-footer justify-content-center">
                <button class="btn btn-rose btn-link btn-lg" type="submit">
                    Sign in
                </button>
            </div>
        </div>
    </form>
{% endblock %}