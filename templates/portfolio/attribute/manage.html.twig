{% extends "template/template.html.twig" %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="h4">Liste des compétences</h1>
                    <a href="{{ path("attribute_create") }}" class="btn btn-primary"><i class="fas fa-plus"></i></a>
                </div>
                <table class="table table-striped table-hovered mb-0">
                    <thead>
                        <tr>
                            <th class="text-center text-uppercase">Id</th>
                            <th class="text-center text-uppercase">Nom</th>
                            <th class="text-center text-uppercase">Description</th>
                            <th class="text-center text-uppercase">Url</th>
                            <th class="text-center text-uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for attribute in attributes %}
                            <tr>
                                <td class="text-center align-middle">{{ attribute.id }}</td>
                                <td class="text-center align-middle">{{ attribute.name }}</td>
                                <td class="text-center align-middle">{{ attribute.description }}</td>
                                <td class="text-center align-middle"><a href="{{ attribute.url }}" target="_blank"> Link</a></td>
                                <td class="text-center align-middle">
                                    <a href="{{ path("attribute_update", { id: attribute.id }) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                    <a href="{{ path("attribute_delete", { id: attribute.id }) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center align-middle">Aucune compétence</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
