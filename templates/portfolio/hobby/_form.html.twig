{{ form_start(form) }}
<div class="card">
    <div class="card-header">{{ title }}</div>
    <div class="card-body">
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.name) }}
            </div>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a href="{{ path("hobby_manage") }}" class="btn btn-secondary">Back</a>
        <button class="btn btn-primary">{{ action }}</button>
    </div>
</div>
{{ form_end(form) }}